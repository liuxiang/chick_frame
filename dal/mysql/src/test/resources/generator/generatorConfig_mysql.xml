<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
  <!--<properties resource="config.properties"/>-->

  <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
    <property name="beginningDelimiter" value="`"/>
    <property name="endingDelimiter" value="`"/>

    <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
      <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
      <!-- caseSensitive默认false，当数据库表名区分大小写时，可以将该属性设置为true -->
      <!--<property name="caseSensitive" value="true"/>-->
    </plugin>

    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                    connectionURL="jdbc:mysql://192.168.6.70:3306/chick"
                    userId="yuankui"
                    password="yuankui123">
    </jdbcConnection>

    <javaModelGenerator targetPackage="my.liuxiang.dal.mysql.model" targetProject="dal/mysql/src/test/java"/><!-- 相对路径从当前工程开始 -->
    <sqlMapGenerator targetPackage="mappers" targetProject="dal/mysql/src/test/java"/>
    <javaClientGenerator targetPackage="my.liuxiang.dal.mysql.mapper" targetProject="dal/mysql/src/test/java" type="XMLMAPPER" />

    <table tableName="%" >
      <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
    </table>
  </context>
</generatorConfiguration>